{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": ["example", "build"]
}
